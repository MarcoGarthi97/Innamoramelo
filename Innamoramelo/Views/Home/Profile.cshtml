<style>
    .list-group {
        max-height: 150px;
        margin-bottom: 10px;
        overflow: scroll;
        -webkit-overflow-scrolling: touch;
        overflow-x: hidden;
        scrollbar-width: thin !important;
        scrollbar-color: #3B71CA !important;
    }

    .list-group::-webkit-scrollbar {
        width: 12px;
    }

    .list-group::-webkit-scrollbar-thumb {
        background-color: #3B71CA;
        border-radius: 20px;
    }

    .interest {
        cursor: pointer;
        color: white;
    }

    .card {
        height: 300px;
        /* Imposta un'altezza fissa per la card */
    }

    .card-img-top {
        width: 100%;
        height: 240px;
        object-fit: cover;
    }

    div {
        color: white;
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card bg-dark" id="card">
            <div class="card-header">
                <h2>Profile</h2>
            </div>
            <div class="row" id="card-body">
                <div class="row">
                    <div class="col">
                        <div class="container">
                            <div style='margin-bottom: 2%; color:"white"'>Municipality</div>
                            <input class="form-control" id="inputMunicipalityFilter" type="text" placeholder="Search..">
                            <ul class="list-group" id="listMunicipalities">
                            </ul>
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="range" class="form-label" id="labelRange">Range: 5km</label>
                            <input type="range" class="form-range" id="range" min="5" max="100" value="5">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="input-group">
                        <label for="inputBio" class="form-label">Biography</label>
                        <textarea class="form-control" aria-label="With textarea" id="inputBio"></textarea>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <button type="button" id="back" class="btn btn-primary">←</button>
                    </div>
                    <div class="col-md-6 text-end">
                        <button type="button" id="sexualContinue" class="btn btn-primary">Continue</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

